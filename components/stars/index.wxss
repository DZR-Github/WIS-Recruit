@keyframes tail {
  0% {
    background: linear-gradient(-45deg, #ffffff, rgba(0, 0, 255, 0));
    width: 0;
  }

  30% {
    background: linear-gradient(-45deg, #ffffff, rgba(0, 0, 255, 0));
    width: 100px;
  }

  100% {
    background: linear-gradient(-45deg, #ffffff, rgba(0, 0, 255, 0));
    width: 0;
  }
}


@keyframes shining {
  0% {
    width: 0;
  }

  50% {
    width: 15px;
  }

  100% {
    width: 0;
  }
}

@keyframes shooting {
  0% {
    background: linear-gradient(-45deg, #ffffff, rgba(0, 0, 255, 0));
    transform: translateX(0);
  }

  100% {
    background: linear-gradient(-45deg, #ffffff, rgba(0, 0, 255, 0));
    transform: translateX(300px);
  }
}